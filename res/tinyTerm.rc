#pragma code_page(65001)
#include <windows.h>
#include <commctrl.h>
#include "resource.h"

IDICON_TL1	ICON	"TL1.ico"


IDMENU_MAIN MENU
{
	POPUP "&Term"
	{
		MENUITEM "&Connect...\tAlt+C",  ID_CONNECT
		MENUITEM "&Disconnect\tAlt+D",  ID_DISCONN, GRAYED
		MENUITEM "Copy &all  \tAlt+A",  ID_COPYALL
		MENUITEM "&Log...    \tAlt+L",  ID_LOGG
		MENUITEM "&About",			    ID_ABOUT
		MENUITEM SEPARATOR
	}
	POPUP "&Script"
	{
		MENUITEM "&Run...", 		ID_SCRUN
		MENUITEM "&Pause", 			ID_SCPAUSE, GRAYED
		MENUITEM "&Stop", 			ID_SCQUIT, 	GRAYED
		MENUITEM "&Ftpd...", 		ID_FTPD
		MENUITEM "&Tftpd...", 		ID_TFTPD
		MENUITEM SEPARATOR
	}
	POPUP "&Options"
	{
		MENUITEM "&Local Echo",		ID_ECHO
		MENUITEM "Local &Edit\tAlt+E", ID_EDIT
		MENUITEM "&Font...\tAlt+F",	ID_FONT
		MENUITEM "&Zoom\tAlt+Z", 	ID_ZOOM
		MENUITEM "&Tranparent", 	ID_TRANSP
	}
}
IDACCEL_MAIN ACCELERATORS
{
  "a", ID_COPYALL,  ALT
  "c", ID_CONNECT, 	ALT
  "e", ID_EDIT, 	ALT
  "f", ID_FONT,     ALT
  "l", ID_LOGG,	    ALT
  "z", ID_ZOOM,     ALT
  "t", ID_TERM,     ALT
  "s", ID_SCRIPT,   ALT
  "o", ID_OPTIONS,  ALT
 }

IDD_CONNECT DIALOG 45, 30, 150, 100	// Connection Dialog
CAPTION "Connect Dialog"
{
    COMBOBOX IDPROTO, 60, 10, 70, 16, CBS_DROPDOWNLIST|CBS_HASSTRINGS|WS_TABSTOP
    LTEXT    "Protocol:", 	IDSTATIC1,	4, 12, 50, 12, SS_RIGHT, WS_EX_LEFT
    COMBOBOX IDPORT,  60, 30, 70, 16, CBS_DROPDOWN|CBS_HASSTRINGS|WS_TABSTOP
    LTEXT    "Port:", 		IDSTATIC2,	4, 32, 50, 12, SS_RIGHT, WS_EX_LEFT
    COMBOBOX IDHOST,  60, 50, 70, 16, CBS_DROPDOWN|CBS_HASSTRINGS|CBS_AUTOHSCROLL|WS_TABSTOP
    LTEXT    "Host:", 		IDSTATIC,	4, 52, 50, 12, SS_RIGHT, WS_EX_LEFT
    DEFPUSHBUTTON "Connect",IDCONNECT, 80, 75, 50, 16, 0, WS_EX_LEFT
    PUSHBUTTON    "Cancel", IDCANCEL,  20, 75, 50, 16, 0, WS_EX_LEFT
}

1 VERSIONINFO						// Version Information
    FILEVERSION     1,3,0,0
    PRODUCTVERSION  1,3,0,0
    FILEOS          VOS__WINDOWS32
    FILETYPE        VFT_APP
    FILESUBTYPE     VFT2_UNKNOWN
    FILEFLAGSMASK   0
    FILEFLAGS       0
{
    BLOCK "StringFileInfo"
    {
        BLOCK "040904B0"
        {
            VALUE "FileDescription", "Tiny Terminal Emulator"
            VALUE "LegalCopyright", "Â©2018-2019 Yongchao Fan"
            VALUE "ProductName", "tinyTerm"
            VALUE "ProductVersion", "1.3.0.0"
        }
    }
    BLOCK "VarFileInfo"
    {
        VALUE "Translation", 0x0409, 0x04B0
    }
}
CREATEPROCESS_MANIFEST_RESOURCE_ID RT_MANIFEST    "tiny.manifest"